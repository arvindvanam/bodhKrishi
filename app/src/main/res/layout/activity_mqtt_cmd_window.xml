<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:visibility="visible"
    tools:context="com.bodhileaf.agriMonitor.mqtt_cmd_window">


    <Button
        android:id="@+id/button_mqtt_send_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="115dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/buttonshape"
        android:text="SEND QUERY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mqtt_msg" />

    <EditText
        android:id="@+id/mqtt_msg"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="103dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="text"
        android:text="MQTT MESSAGE"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mqtt_topic" />

    <EditText
        android:id="@+id/mqtt_topic"
        android:layout_width="342dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:inputType="text"
        android:text="MQTT TOPIC"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
