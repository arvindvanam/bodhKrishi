        app:layout_constraintBottom_toTopOf="@+id/button_stats_hourly_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stats_air_humid_val"
        app:layout_constraintTop_toBottomOf="@+id/stats_node_spinner" />

    <TextView
        android:id="@+id/stats_node_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="95dp"
