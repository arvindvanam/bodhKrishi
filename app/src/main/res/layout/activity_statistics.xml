        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        app:srcCompat="@drawable/hourly_chart" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="150dp"
        android:layout_height="17dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="CURRENT STATS"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/stats_image_air_humid"
        app:layout_constraintEnd_toStartOf="@+id/stats_node_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_node_spinner" />

    <TextView
        android:id="@+id/textView23"
